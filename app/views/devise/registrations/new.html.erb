
<div class="row">
    <div class="col l2 m3 s12"></div>
    <div class="col l8 m6 s12">
        <div class="card-panel z-depth-5">
            <h5 class="center"><b>Cuz your story is not less than a movie.</b></h5>
            <p class="center">Just fill and go and be sure to edit your profile for more details</p>
            <%= form_for(@user, :url => registration_path(resource_name), :validate => true) do |f| %>
				<%= render 'shared/devisemes' %>
                <div class="input-field">
                    <i class="material-icons prefix">account_circle</i>
                    <%= f.text_field :username, placeholder: "Username" %>
                </div>
                  
                   <div class="input-field">
                    <i class="material-icons prefix">email</i>
                     <%= f.email_field :email,  class: "validate", placeholder: "Email" %> 
                  </div>
                  
                   <div class="input-field">
                    <i class="material-icons prefix">lock</i>
                    <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>
				    <%= f.password_field :password, autocomplete: "off", placeholder: "Password here"  %>
                  </div>
                  
                    
                   <div class="input-field">
                    <i class="material-icons prefix">vpn_key</i>
                    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Write your password again" %>
                  </div>
                  <p class="right">Already have an account?</p><%= f.submit "Create", class: "btn left col s12" %><br><br><%= render "devise/shared/links", class:"modal-trigger" %>
                  
                <% end %>                
                  <div class="clearfix"></div>
                  
               </div>
               </div>
            </form>
 <div class="col l2 m3 s12"></div>            