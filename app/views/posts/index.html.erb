<% if params[:category].nil? %>
  <h2>Following Stories</h2>
<% else %>
  <h2><%= params[:category] %> </h2>
<% end %>
  <% @posts.each do |post| %>
    <div class ="box">
      <div class="chip"><%= time_ago_in_words(post.created_at) %> ago</div>
      <%= link_to image_tag(post.images[0]), post %>
      <br>
      <div class="row valign-wrapper">
        <div class="col s2">
          <%= link_to image_tag(post.user.avatar.url), post.user, class: "circleme" %> <!-- notice the "circle" class -->
        </div>
        <div class="col s10">
          <span class="index-title">
            <%= link_to post.title.truncate(50).html_safe, post %>
          </span>
        </div>
      </div>
    </div>
  <% end %>
